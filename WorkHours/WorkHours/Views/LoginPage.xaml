<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkHours.Views.LoginPage"
             BackgroundColor="Azure">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
            <Entry Placeholder="Username" Text="{Binding Username}" Margin="20,0,20,0"/>
            <Entry Placeholder="Password" Text="{Binding Password}" Margin="20,0,20,0"/>
            <Button BorderWidth="2" CornerRadius="15" Text="Login" Command="{Binding LoginCommand}" TextColor="White" Margin="20"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>